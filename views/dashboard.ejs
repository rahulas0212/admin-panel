<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <h1>Admin Dashboard</h1>
        <a href="/logout" class="logout-btn">Logout</a>
    </header>

    <main>
        <section class="stats">
            <div class="stat-card">
                <h3>Total Members</h3>
                <p><%= stats.total %></p>
            </div>
            <div class="stat-card">
                <h3>Active Members</h3>
                <p><%= stats.active %></p>
            </div>
            <div class="stat-card">
                <h3>In Progress</h3>
                <p><%= stats.inProgress %></p>
            </div>
            <div class="stat-card">
                <h3>Expired</h3>
                <p><%= stats.expired %></p>
            </div>
        </section>

        <section class="actions">
            <button onclick="location.href='/add-member'">Add Member</button>
            <button onclick="location.href='/search-member'">Search Member</button>
        </section>
    </main>

    <script src="/dashboard.js"></script>
</body>
</html>
